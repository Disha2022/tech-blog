<div class="comments">
  <h3>Comments</h3>
  <div id="comments-border">
    {{#each this}}
    <section class="comment">
      <div class="text">
        {{comment_text}}
      </div>
      <div class="meta">
        -{{user.username}}, {{format_date created_at}}
      </div>
    </section>
    {{/each}}
  </div>
</div>